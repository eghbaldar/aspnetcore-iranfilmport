@using Endpoint.Website.Models.AddUsers;
@using IranFilmPort.Application.Services.NewsComments.Queries.GetNewsComments
@using IranFilmPort.Common.Helpers;
@using IranFilmPort.Common.Constants
@model ResultGetNewsCommentsServiceDto
@{
    Layout = "~/Views/Shared/_LayoutUserClientAdmin.cshtml";
    ViewData["HeadTitle"] = "کامنت پست ها";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card-box">
            <h4 class="mt-0 header-title">کامت های پست ها</h4>
            <p class="text-muted font-14 mb-3">
                بدون توضیحات
            </p>

            <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>پست</th>
                            <th>تعداد کامنت ها</th>
                            <th>تعداد بررسی نشده</th>
                            <th>تائید شده ها</th>
                            <th>تائید نشده ها</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var article in Model.Result)
                        {
                            <tr>
                                <td>@article.NewsTitle</td>
                                <td>
                                    @article.Total
                                </td>
                                <td>
                                    @article.UnderConsiderationCount
                                </td>
                                <td>
                                    @article.AcceptedCount
                                </td>
                                <td>
                                    <b style="color:red;">@article.RejectedCount</b>
                                </td>
                                <td>
                                    <div class="dropdown float-right">
                                        <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                                            <i class="mdi mdi-dots-vertical"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a href="/blog/@article.NewsUniqueCode" class="dropdown-item" target="_blank">مشاهده مقاله</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    <script src="~/admintemplate/pagejscss/news/news.js"></script>
}