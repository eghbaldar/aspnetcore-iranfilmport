@using IranFilmPort.Application.Services.Sliders.Queries.GetSlidersForAdmin
@using IranFilmPort.Common.Helpers;
@using IranFilmPort.Common.Constants
@addTagHelper *,LazZiya.TagHelpers
@{
    Layout = "~/Views/Shared/_LayoutUserClientAdmin.cshtml";
    ViewData["HeadTitle"] = "تنظیمات کلی سایت";
    ViewData["pageHeadTitle"] = "اسلایدرها";
    ViewData["HeadTitle"] = "اسلایدرها";
    //Pagination
    int currentPage = 1;
    int.TryParse(Context.Request.Query["page"], out currentPage);
}
@model ResutlGetSlidersForAdminServiceDto
<div class="row">
    <div class="col-12">
        <div class="card-box">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">فعال یا غیرفعال</label>
                <div class="col-sm-10 alignCenter">
                    <div class="custom-control custom-switch ">
                        <label class="custom-control material-switch">
                            <input type="checkbox" name="active" id="chkActive" class="material-switch-control-input">
                            <span class="material-switch-control-indicator"></span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2  col-form-label" for="simpleinput">عنوان فارسی</label>
                <div class="col-sm-10">
                    <input type="text" id="txtTitle"
                           class="form-control" placeholder="متن دلخواه شما...">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2  col-form-label" for="simpleinput">عنوان انگلیسی</label>
                <div class="col-sm-10">
                    <input type="text" id="txtTitleEn"
                           class="form-control" placeholder="متن دلخواه شما...">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2  col-form-label" for="simpleinput">زیر عنوان</label>
                <div class="col-sm-10">
                    <input type="text" id="txtSubText"
                           class="form-control" placeholder="متن دلخواه شما...">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2  col-form-label" for="simpleinput">لینک</label>
                <div class="col-sm-10">
                    <input type="text" id="txtLink"
                           class="form-control" placeholder="متن دلخواه شما...">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2  col-form-label" for="example-fileinput">تصویر اصلی</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" id="fileImage">
                    <div class="alert alert-primary" role="alert">
                        <a target="_blank" href="https://www.freeconvert.com/jpg-to-webp" class="btn btn-lighten-purple waves-effect  width-md waves-purple">jpg->webp (1)</a>
                        <a target="_blank" href="https://cloudconvert.com/jpg-to-webp" class="btn btn-lighten-purple waves-effect  width-md waves-purple">jpg->webp (2)</a>
                        <a target="_blank" href="http://optimizilla.com/" class="btn btn-lighten-primary waves-effect  width-md waves-purple">optmize jpg (1)</a>
                        <a target="_blank" href="https://www.imgonline.com.ua/eng/compress-image-size.php" class="btn btn-lighten-primary waves-effect  width-md waves-purple">optmize jpg (2)</a>
                    </div>
                </div>
            </div>
            <button type="button" onclick="addSlider();"
                    class="btn btn-primary waves-effect width-md waves-light">
                درج
            </button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card-box mt-20">
            <h4 class="mt-0 header-title">اسلایدرها</h4>
            @{
                if (Model.Result.Count == 0)
                {
                    <span>اسلایدری داده نشده است.</span>
                }
                else
                {
                    <div class="table-responsive" id="divSliders">
                        <table class="table table-striped mb-0">
                            <thead>
                                <tr>
                                    <th>عنوان</th>
                                    <th>وضعیت</th>
                                    <th>تصویر</th>
                                    <th>تاریخ درج</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var item in Model.Result)
                                    {
                                        <tr>
                                            <td>
                                                @item.Text
                                            </td>
                                            <td>
                                                @{
                                                    if (item.Active)
                                                    {
                                                        <span class="badge badge-success">فعال</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-warning">غیر فعال</span>
                                                    }
                                                }

                                            </td>
                                            <td>
                                                <a target="_blank" href="/UploadedStuff/admin/images/admin-slider-images/@item.File">{نمایش تصویر}</a>
                                            </td>
                                            <td>
                                                @{
                                                    var shamsidate = new PersianDateTime(@item.InsertDateTime);
                                                    var shamsidateString = shamsidate.ToString("yyyy/MM/dd");
                                                    var persiandateTime = PersianNumberHelper.ConvertToPersian(shamsidateString);
                                                    @persiandateTime
                                                }
                                            </td>
                                            <td>
                                                <div class="dropdown float-right">
                                                    <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                                                        <i class="mdi mdi-dots-vertical"></i>
                                                    </a>
                                                    <div class="dropdown-menu dropdown-menu-right">
                                                        <a onclick="showDetail('@item.Id','@item.Text','@item.TextEn','@item.SubText','@item.Link','@item.Active.ToString().ToLower()')" class="dropdown-item">جزییات</a>
                                                        <a onclick="deleteSlider('@item.Id')" class="dropdown-item">حذف</a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                }
            }
            <div class="row mt-20">
                <div class="col-sm-12 col-md-7">
                    <div class="dataTables_paginate paging_simple_numbers"
                         id="datatable-buttons_paginate">
                        <paging page-no="@currentPage == 0 ? 1 : currentPage"
                                query-string-key-page-no="page"
                                page-size="@Model.RowsOnEachPage"
                                total-records="@Model.RowCount">
                        </paging>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
